{
  "include": ["./src/**/*"],
  "exclude": ["./src/webview/**/*"],
  "compilerOptions": {
    "lib": ["es2019"],
    "module": "commonjs",
    "target": "es2018",
    "jsx": "react",
    "jsxFactory": "Machinat.createElement",
    "jsxFragmentFactory": "Machinat.Fragment",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "rootDir": "./src",
    "outDir": "./lib"
  }
}
